\documentclass[12pt]{article}

% PAGE GEOMETRY & BACKGROUND
\usepackage[margin=1.5cm]{geometry}
\usepackage{xcolor}
\definecolor{NeonRed}{HTML}{FF0044}
\definecolor{ElectricCyan}{HTML}{00FFFF}
\definecolor{VoidBlack}{HTML}{000000}
\pagecolor{VoidBlack}
\color{ElectricCyan}

% FONT SETUP
\usepackage{fontspec}
\setmainfont{Rajdhani}
\newfontfamily\TitleFont{Orbitron}
\newfontfamily\CodeFont{Fira Code}

% SPACING
\usepackage{setspace}
\setstretch{1.25}

% SECTION STYLES
\usepackage{titlesec}
\titleformat{\section}
  {\huge\bfseries\TitleFont\color{NeonRed}}
  {}{0pt}{}

\titleformat{\subsection}
  {\Large\bfseries\TitleFont\color{ElectricCyan}}
  {}{0pt}{}

% CUSTOM TITLE BLOCK
\newcommand{\codextitle}[1]{
  \begin{center}
    {\TitleFont\Huge\color{NeonRed} #1}\\[0.5cm]
    {\CodeFont\small >> SYSTEM.STATUS: ONLINE}\\[0.2cm]
    {\CodeFont\small >> PULSE.BPM: 180}\\[0.5cm]
  \end{center}
  \vspace{0.5cm}
}

% DISABLE HEADERS/FOOTERS
\pagestyle{empty}

\begin{document}

% TITLE
\codextitle{$title$}

% BODY
$body$

\end{document}
